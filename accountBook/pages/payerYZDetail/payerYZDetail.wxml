  <view class='list' wx:for="{{listData.data}}" wx:for-item="item" wx:key="{{index}}">
    <view class='listheight'>
      {{index}} 月
    </view>
    <view class='listcon' wx:for="{{item}}" wx:for-item="children" wx:if="{{ currentRouter.name=='预支总金额' }}" wx:key="{{ index }}">
      <van-swipe-cell id="swipe-cell" right-width="65" bind:close="onClose">
        <view class='item'>
          <view class='item-pic'></view>
          <view class='item-center'>
            <text class='item-name'>{{ children.name }}</text>
            <text class='item-time'>{{ children.time }}</text>
          </view>
          <view class='item-right'>￥{{ filter.parserNum(children.advanceFee) }}</view>
        </view>
        <view slot="right" class='warpright'>
          <!-- <view data-type="edit" bindtap='handleEvent' wx:if="{{ currentRouter.name=='预支总金额' }}" data-typeid="{{ children.sId }}" class='edit'>编辑</view> -->
          <view data-type="del" bindtap='handleEvent' data-afid="{{ children.afId }}"  class='del'>删除</view>
        </view>
      </van-swipe-cell>
    </view>

    
    <view class='listcon' wx:if="{{ currentRouter.name !='预支总金额' }}" wx:for="{{item}}" wx:for-item="children" wx:key="{{ index }}">
      <van-swipe-cell id="swipe-cell" right-width="65" bind:close="onClose">
        <view class='item'>
          <view class='item-pic'></view>
          <view class='item-center'>
            <text class='item-name'>{{ children.name }}</text>
            <text class='item-time'>{{ children.time }}</text>
          </view>
          <view class='item-right'>￥{{ filter.parserNum(children.advanceFee) }}</view>
        </view>
        <view slot="right" class='warpright'>
          <!-- <view data-type="edit" bindtap='handleEvent' wx:if="{{ currentRouter.name=='预支总金额' }}" data-typeid="{{ children.sId }}" class='edit'>编辑</view> -->
          <view data-type="del" bindtap='handleEvent' data-afid="{{ children.afId }}" data-wsid= "{{ children.wsId }}" class='del'>删除</view>
        </view>
      </van-swipe-cell>
    </view>
  </view>
