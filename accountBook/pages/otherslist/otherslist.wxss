/* accountBook/pages/craylist/craylist.wxss */

.container {
  background: #efeff4;
  min-height: 100vh;
  overflow: hidden;
}
.header {
  background-color: #fff;
  padding: 40rpx 0;
  text-align: center;
  box-sizing: border-box;
}

.headert {
  font-size: 28rpx;
  color: #666;
  line-height: 30rpx;
  margin-bottom: 20rpx;
}

.headerb {
  font-family: 'Lato-Bold';
  line-height: 40rpx;
  font-size: 44rpx;
  color: #333;
}

.list {
}

.listheight {
  line-height: 60rpx;
  font-size: 24rpx;
  color: #333;
  padding: 0 20rpx;
}

.listcon {
  background: #fff;
  /* padding: 0 20rpx; */
}

.item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.listcon .item:last-child{
  border-bottom: 1rpx solid transparent;
}
.item-pic {
  width: 50rpx;
  height: 50rpx;
  background: #3A93FF;
  margin: 5rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height:50rpx;
}
.item-pic i{
  font-size:32rpx;
  color: #fff;
}

.item-center {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
}

.item-name {
  display: block;
  font-size: 28rpx;
  line-height: 30rpx;
  color: #333;
}

.item-time {
  margin-top: 10rpx;
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #999;
}

.item-right {
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
  font-family: 'Lato-Bold';
}
.move{
  position:fixed;
width:calc(100% - 40rpx);
right:20rpx;
bottom:150rpx;

}
.addbtn{
  width: 90rpx;
	height: 90rpx;
  margin-left:calc(100% - 90rpx);
	background-color: #3a93ff;
	box-shadow: 0px 1rpx 18rpx 0rpx 
		rgba(3, 84, 181, 0.43);
  border-radius: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
.addbtn i{
  width: 55rpx;
	height: 55rpx;
  font-size:55rpx;
	color: #ffffff;
}
.warpright{
  width: 65px;
  height: 100rpx;
}
.del{
    color: #fff;
    font-size: 30rpx;
    width: 65px;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    line-height: 100rpx;
    background-color: #f44;
}
.edit{
  color: #fff;
    font-size: 30rpx;
    width: 65px;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    line-height: 100rpx;
    background-color: #43B252;
}
.nodata {
  width: 268rpx;
  height: 317rpx;
  margin:200rpx auto;
  text-align: center;
  font-size:30rpx;
  color: #B5B5B5;
}

.nodata .nodata-pic{
  width:100%;
  height:100%;
}