/* accountBook/pages/cldformDetails/cldformDetails.wxss */

.container {
  background: #efeff4;
  min-height: 100vh;
}

.listheight {
  line-height: 60rpx;
  font-size: 24rpx;
  color: #333;
  padding: 0 20rpx;
}

.listcon {
  background: #fff;
  /* padding: 0 20rpx; */
}

.item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
/* .listcon .item:last-child{
  border-bottom: 1rpx solid transparent;
} */
.item-pic {
  width: 50rpx;
  height: 50rpx;
  /* border: solid 1rpx #666; */
  margin: 5rpx;
  border-radius: 50rpx;
  background-color: #3a93ff;
  position: relative;
}
.item-pic icon{
  color: #fff;
  font-size: 32rpx;
  position: absolute;
  left: 50%;
  top: 32%;
  transform: translate(-50%,-50%)
}

.item-center {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
}

.item-name {
  display: block;
  font-size: 28rpx;
  line-height: 30rpx;
  color: #333;
}

.item-time {
  margin-top: 10rpx;
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #999;
}

.item-right {
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
  font-family: 'Lato-Bold';
}
.move{
  position:fixed;
  width: calc(100% - 40rpx);
  right:20rpx;
  bottom:150rpx;
}
.addbtn{
  width: 90rpx;
	height: 90rpx;
	background-color: #3a93ff;
	box-shadow: 0px 1rpx 18rpx 0rpx 
		rgba(3, 84, 181, 0.43);
  border-radius: 90rpx;
  text-align: center;
  line-height: 90rpx;
  margin-left: calc(100% - 90rpx)
}
.addbtn i{
  width: 55rpx;
	height: 55rpx;
  font-size:55rpx;
	color: #ffffff;
}
.warpright{
  width: 130px;
  height: 100rpx;
}
.del{
    color: #fff;
    font-size: 30rpx;
    width: 65px;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    line-height: 100rpx;
    background-color: #f44;
}
.edit{
  color: #fff;
    font-size: 30rpx;
    width: 65px;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    line-height: 100rpx;
    background-color: #43B252;
}
.noData image{
  margin: 50%;
  transform: translateX(-50%);
  width: 268rpx;
  height: 317rpx;
}