/* accountBook/pages/summary/summary.wxss */

.wrapper {
  background: #efeff4;
  min-height: 100vh;
}

.dropyear {
  line-height: 60rpx;
  text-align: center;
  height: 60rpx;
  background-color: #fff;
}

.dropyear text {
  display: inline-block;
  line-height: 60rpx;
  position: relative;
  padding-right: 40rpx;
  font-size: 24rpx;
  color: #333;
}

.dropyear text::after {
  content: '';
  position: absolute;
  right: 0;
  top: 30rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #333;
  display: inline-block;
}

.bannerpic {
  height: 175rpx;
  border-radius: 8rpx;
  margin: 20rpx;
  position: relative;
}

.bannerpic image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
}

.bannertext {
  margin: 40rpx 0;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
  color: #fff;
  text-align: center;
}

.bannertextt {
  font-size: 28rpx;
  line-height: 30rpx;
  color: #fff;
}
.bannertextb{
  font-size: 44rpx;
  line-height: 40rpx;
  color: #ffffff;
  margin-top:30rpx;
  font-weight: bold;
}

.header {
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0px 20rpx;
  margin: 20rpx 0;
}

.listwarp {
  background: #fff;
  padding: 0 20rpx;
}

.list {
  border-bottom: 1px solid #e6e6e6;
  padding: 30rpx 0;
  display: flex;
  box-sizing: border-box;
}

.listicon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 30rpx;
  border: 1px solid #eee;
  border-radius: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.listicon i{
  font-size:32rpx;
  color: #3A93FF;
}
.listright {
  flex: 1;
}

.listrightt {
  font-size: 30rpx;
  color: #333;
  height: 40rpx;
  font-weight: bold;
}

.listrightb {
  height: 30rpx;
  display: flex;
}

.progressbg {
  flex: 1;
  height: 15rpx;
  margin: 7.5rpx 0;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  position: relative;
}

.progressvalue {
  position: absolute;
  left: 0;
  top: 0px;
  width: 30%;
  height: 100%;
  background-image: linear-gradient(-90deg, #1ab7f9 0%, #3b93ff 100%);
  border-radius: 8rpx;
}

.progresstext {
  width: 100rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #3a93ff;
  text-align: right;
}
