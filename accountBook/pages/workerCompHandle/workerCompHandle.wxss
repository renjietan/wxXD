.wrapper {
  background: #efeff4;
  min-height: 100vh;
}

.wrap {
  background: #fff;
}

.date-show {
  position: relative;
  width: 250rpx;
  /* font-family: PingFang-SC-Regular; */
  font-size: 30rpx;
  text-align: center;
  margin: 29rpx auto 10rpx;
  color: rgb(0, 115, 255);
  font-weight: bold;
  font-family: Lato-Bold;
}

.lt-arrow, .rt-arrow {
  position: absolute;
  top: 1rpx;
  width: 60rpx;
  height: 60rpx;
  padding-right: 0.6rem;
}

.lt-arrow image, .rt-arrow image {
  width: 40rpx;
  height: 40rpx;
}

.lt-arrow {
  left: -110rpx;
  /* transform: rotate(180deg); */
}

.rt-arrow {
  right: -100rpx;
}

.header {
  padding: 0 15rpx;
  font-weight: bold;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: rgb(153, 153, 153);
  font-size: 24rpx;
  text-align: center;
  padding: 25rpx 0;
}

/* .weekMark{
    position: relative;
} */

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #22a7f6;
}

.date-box {
  font-size: 0;
  padding: 10rpx 15rpx;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #020202;
  text-align: center;
  vertical-align: middle;
}

.date-head {
  font-size: 22rpx;
  font-weight: bold;
  padding: 10rpx
}

.date-head > view {
  line-height: 80rpx;
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

.nowDay .date-head {
  width: 60rpx;
  /* border-radius: 50%; */
  text-align: center;
  color: #fff;
  background-color: #22a7f6;
  margin: 0 auto;
}

.date-weight {
  font-size: 22rpx;
  padding: 15rpx 0;
}

.nowDay .date-weight {
  color: #22a7f6;
}

.one {
  position: absolute;
  bottom: 0;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
}

.two {
  position: absolute;
  bottom: 30rpx;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: blue;
}

.container {
  background: #efeff4;
  min-height: 100vh;
  /* justify-content: center; */
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  position: relative;
  padding: 20rpx;
  box-sizing: border-box;
}

.view_T {
  color: #333;
  line-height: 24px;
  font-size: 14px;
  min-width: 600rpx;
  position: relative;
}

.van-cell-text_T {
  float: left;
  margin-right: 30rpx;
}

.vanButton_T {
  background: #3a93ff !important;
  margin-top: 30rpx !important;
}

.handleBtn_T {
  margin: 30rpx 3% 20rpx 3% !important;
  width: 94%;
}
.handleBtn_Ti{
  position: absolute !important;
  width: calc(100% - 40rpx);
  bottom: 20rpx
}
.zhen {
  background: #e6f1ff;
  position: relative !important;
}

.zhen > image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: -25rpx;
  top: -24rpx
}

.ban {
  background: #fff3e7;
  position: relative;
}
.ban > image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: -24rpx;
  top: -24rpx
}

.remark {
  margin: 20rpx 0 0 0;
  background-color: #fff;
  overflow: hidden;
}

.remark textarea {
  width: 90%;
  padding: 20rpx 5%;
  height: 268rpx;
  font-size: 28rpx;
}
