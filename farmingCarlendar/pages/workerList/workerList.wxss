/* farmingCarlendar/pages/pondList/pondList.wxss */

.container_pondList {
  background: #efeff4;
  min-height: 100vh;
  /* justify-content: center; */
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  position: relative;
  padding: 20rpx 25rpx;
}
.van-collapse_t{
  margin-top: 15rpx !important
}
.van-collapse_t .van-collapse-item{
  border-bottom: 1px solid #80848f
}
.pondList_title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
  color: rgba(80, 81, 82, 1);
  font-weight: bold
}

.pondList_content {
  margin-top: 20rpx;
}
.content_box{
  position: relative
}
/* .card_icon_handleEdit {
  position: absolute !important;
  top: 50%;
  margin-top: -20rpx;
  margin-left: 30rpx;
} */
.card_icon_handleEdit {
  position: absolute !important;
  top: 10rpx;
  right: 20rpx;
}
/* .card_icon_handleDelete{
  position: absolute !important;
  top: 50%;
  right: 0;
  margin-top: -20rpx;
} */
.card_icon_handleDelete{
  position: absolute !important;
  bottom: 10rpx;
  right: 20rpx;
}
.card_row {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  line-height: 50rpx;
  color: rgba(80, 81, 82, 1);
}
.card_content_child{
  color: rgba(80, 81, 82, .7);
}
.card_label{
  width: 40%;
  min-width: 200rpx
}


.card_T{
  margin-bottom: 10rpx !important
}

.move {
  position: fixed;
  width: calc(100% - 40rpx);
  right: 20rpx;
  bottom: 150rpx;
}

.addbtn {
  width: 90rpx;
  height: 90rpx;
  background-color: #3a93ff;
  box-shadow: 0px 1rpx 18rpx 0rpx rgba(3, 84, 181, 0.43);
  border-radius: 90rpx;
  text-align: center;
  line-height: 90rpx;
  margin-left: calc(100% - 90rpx);
}

.addbtn i {
  width: 55rpx;
  height: 55rpx;
  font-size: 55rpx;
  color: #fff;
}


.content_title{
  display: flex;
}

.content_title_name{
  margin-right: 30rpx;
  min-width: 205rpx
}