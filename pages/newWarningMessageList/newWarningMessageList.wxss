/* pages/alertInfo/alertInfo.wxss */

.contain {
  background: #efeff4;
  min-height: 100vh;
}

.warpcon {
  overflow: hidden;
}

.listWarp {
  padding: 0px 20rpx;
}

.selestWarp {
  margin-top: 5rpx;
  margin-bottom: 15rpx;
}

.selestTime {
  height: 70rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.selestBtn {
  width: 120rpx;
  display: block;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.selestBtnIs {
  color: #1ab7f9;
  font-weight: bold;
}

.selestBtnIs:after {
  content: '';
  /* background: #EBF4FF; */
  display: block;
  position: absolute;
  bottom: 0px;
  left: 50%;
  margin-left: -15rpx;
  border: 15rpx solid transparent;
  border-bottom-color: #ebf4ff;
}

.datawarp {
  height: 60rpx;
  background: #ebf4ff;
  display: flex;
  justify-content: center;
  padding: 30rpx 0px;
}

.databox {
  width: 200rpx;
  height: 58rpx;
  border: #1ab7f9 solid 1px;
  border-radius: 8rpx;
  margin: 0px 10rpx;
}

.databox text {
  color: #333;
  font-size: 24rpx;
  display: block;
  line-height: 60rpx;
  text-align: center;
}

.databoxBtn {
  width: 140rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
  background-color: #1ab7f9;
  color: #fff;
  font-size: 26rpx;
  display: block;
  text-align: center;
  margin: 0px 10rpx;
}

.listItem {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 18rpx rgba(26, 183, 249, 0.13);
  margin: 20rpx 0px;
}

