} */

.infolistTop {
  height: 50rpx;
  display: flex;
}

.infolistTop text {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  color: #fa2727;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.infolistTop i {
  height: 50rpx;
  color: #fa2727;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 6rpx;
}

.listBottom {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
}

.listBottomLeft text {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999;
}

.listBottomLeft i {
  font-size: 26rpx;
  margin-right: 6rpx;
  color: #fa2727;
}

.listTime {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999;
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer text {
  font-size: 30rpx;
  line-height: 300rpx;
  display: block;
  text-align: center;
}

.nolist {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nolist text {
  font-size: 30rpx;
  line-height: 300rpx;
  display: block;
  text-align: center;
}

.warps {
  padding: 20rpx;
}

.warp {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 18rpx rgba(26, 183, 249, 0.13);
}


.listtitle {
  display: block;
  color: #333;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-bottom:10rpx;
}
.listtext{
  display: block;
  color: #333;
  font-size: 26rpx;
  line-height: 50rpx;
}

.ListInfoShow {
  position: relative;
  display: inline-block;
  transform: translateX(-50%);
  left: 50%;
}